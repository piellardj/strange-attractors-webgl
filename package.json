{
  "name": "strange-attractors-webgl",
  "version": "1.0.0",
  "homepage": "https://piellardj.github.io/strange-attractors-webgl",
  "description": "Performant 2D strange attractors plotter",
  "scripts": {
    "pre-commit": "npm run rebuild && npm run lint",
    "build-page": "ts-node-script src/generate-page.ts",
    "build-shaders": "node src/build-shaders.js",
    "build": "npm run build-page && npm run build-shaders && npm run webpack",
    "clean": "shx rm -rf docs/* **/*generated.*",
    "lint": "tslint -c src/config/tslint.json -p src/config/tsconfig.json",
    "rebuild": "npm run clean && npm run build",
    "webpack": "webpack --config src/config/webpack.config.js --output docs/script/main.min.js"
  },
  "author": "“Jérémie PIELLARD <jeremie.piellard@gmail.com> (https://github.com/piellardj)",
  "repository": "github:piellardj/strange-attractors-webgl",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^14.11.1",
    "fs-extra": "^9.0.1",
    "shx": "^0.3.2",
    "ts-loader": "^8.0.4",
    "ts-node": "^9.0.0",
    "tslint": "^6.1.3",
    "typescript": "^4.0.3",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12",
    "webpage-templates": "github:piellardj/webpage-templates"
  }
}
