{
    "title": "Strange attractors",
    "description": "Dynamic and interactive strange attractors drawings",
    "introduction": [],
    "githubProjectName": "strange-attractors-webgl",
    "additionalLinks": [],
    "scriptFiles": [
        "script/main.min.js"
    ],
    "indicators": [
        {
            "id": "points-drawn",
            "label": "Total drawn points"
        }
    ],
    "canvas": {
        "width": 512,
        "height": 512,
        "enableFullscreen": true
    },
    "controlsSections": [
        {
            "title": "Parameters",
            "controls": [
                {
                    "title": "Attractor",
                    "type": "picker",
                    "id": "attractor-picker-id",
                    "placeholder": "none",
                    "options": [
                        {
                            "value": "de-jong",
                            "label": "De Jong"
                        },
                        {
                            "value": "bedhead",
                            "label": "Bedhead"
                        },
                        {
                            "value": "clifford",
                            "label": "Clifford"
                        },
                        {
                            "value": "fractal-dream",
                            "label": "Fractal Dream"
                        }
                    ]
                },
                {
                    "title": "a",
                    "type": "range",
                    "id": "a-range-id",
                    "min": -5,
                    "max": 5,
                    "value": -2.24,
                    "step": 0.01
                },
                {
                    "title": "b",
                    "type": "range",
                    "id": "b-range-id",
                    "min": -5,
                    "max": 5,
                    "value": 0.43,
                    "step": 0.01
                },
                {
                    "title": "c",
                    "type": "range",
                    "id": "c-range-id",
                    "min": -5,
                    "max": 5,
                    "value": -0.65,
                    "step": 0.01
                },
                {
                    "title": "d",
                    "type": "range",
                    "id": "d-range-id",
                    "min": -5,
                    "max": 5,
                    "value": -2.43,
                    "step": 0.01
                }
            ]
        },
        {
            "title": "Rendering",
            "controls": [
                {
                    "title": "Keep drawing",
                    "type": "checkbox",
                    "id": "autorun-checkbox-id",
                    "checked": true
                },
                {
                    "title": "Show formula",
                    "type": "checkbox",
                    "id": "formula-checkbox-id",
                    "checked": true
                },
                {
                    "title": "Show indicators",
                    "type": "checkbox",
                    "id": "indicators-checkbox-id",
                    "checked": true
                },
                {
                    "title": "Quality",
                    "type": "range",
                    "id": "quality-range-id",
                    "min": 0,
                    "max": 1,
                    "value": 0.9,
                    "step": 0.01
                }
            ]
        },
        {
            "title": "Download",
            "controls": [
                {
                    "type": "tabs",
                    "title": "Image size",
                    "id": "download-size",
                    "unique": true,
                    "options": [
                        {
                            "value": "1024",
                            "label": "1024",
                            "checked": true
                        },
                        {
                            "value": "2048",
                            "label": "2048"
                        },
                        {
                            "value": "4096",
                            "label": "4096"
                        }
                    ]
                },
                {
                    "type": "file-download",
                    "id": "file-download-id",
                    "label": "Download image"
                }
            ]
        }
    ]
}